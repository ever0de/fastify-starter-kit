{
  "name": "fastify-starter-kit",
  "description": "A base project that makes it easy to get started with fastify",
  "keywords": [
    "fastify",
    "fastify-starter-kit",
    "prisma",
    "typescript",
    "fastify-typescript"
  ],
  "version": "0.0.1",
  "repository": "git@github.com:ever0de/fastify-starter-kit.git",
  "author": "Jiseok CHOI <jiseok.dev@gmail.com>",
  "license": "MIT",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build:ts": "rm -rf ./dist && tsc",
    "schema-gen": "prisma generate",
    "db-pull": "prisma db pull",
    "db-push": "prisma db push",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start --ignore-watch=.ts$ -w -a 0.0.0.0 -l info -P dist/app.js\"",
    "start": "yarn run build:ts && fastify start -a 0.0.0.0 -l info dist/app.js",
    "test": "mocha -r ts-node/register",
    "test-all": "yarn test 'tests/**/*.test.ts'"
  },
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "dotenv": "^16.0.0",
    "fastify": "^3.27.2",
    "fastify-autoload": "^3.11.0",
    "fastify-cli": "^2.15.0",
    "fastify-plugin": "^3.0.1",
    "fastify-sensible": "^3.1.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.0.0",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "mocha": "^9.2.1",
    "prettier": "^2.6.1",
    "prisma": "^3.11.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.2.4"
  }
}
